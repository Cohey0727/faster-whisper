generator client {
  provider   = "prisma-client"
  output     = "./generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model Message {
  id        Int      @id @default(autoincrement())
  role      String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("messages")
}
